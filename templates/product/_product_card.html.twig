<div class="card">
    <img src="{{ p.mainPicture }}" class="img-fluid" alt="Image du produit"/>
    <div class="card-body">
        <h4 class="card-title">{{ p.name }} ({{ p.price | amount }})</h4>
        <a href="{{ path('product_category', {
            'slug': p.category.slug
        }) }}">
            <span class="badge badge-info mb-3">{{ p.category.name }}</span>
        </a>
        <p class="card-text">{{ p.shortDescription }}</p>
        <a href="{{ path('product_show', {
            'category_slug': p.category.slug,
            'slug': p.slug }) }}" class="btn btn-primary btn-sm">DÃ©tails</a>
        <a href="{{ path('cart_add', {'id': p.id}) }}" class="btn btn-success btn-sm">Ajouter</a>
    </div>
</div>